@model PhoneBook2.Models.Entities.Kisi

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ekle</h2>

<form class="form-horizontal" action="/Kisi/Ekle" method="post">
    <div class="form-group">
        @Html.LabelFor(x=>x.Ad)
        @Html.TextBoxFor(x => x.Ad, null, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Soyad)
        @Html.TextBoxFor(x => x.Soyad, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Firma)
        @Html.TextBoxFor(x => x.Firma, null, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />

</form>
