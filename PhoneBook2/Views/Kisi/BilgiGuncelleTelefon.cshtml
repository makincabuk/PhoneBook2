@model PhoneBook2.Models.IletisimModel.IletisimEkleViewModel
@{
    ViewBag.Title = "BilgiGuncelleTelefon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Telefon Bilgisi Güncelle</h2>

@using (Html.BeginForm("BilgiGuncelleTelefon", "Kisi", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(x => x.Telefon.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Telefon.Etiket)
        @Html.TextBoxFor(x => x.Telefon.Etiket, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Telefon.telefon)
        @Html.TextBoxFor(x => x.Telefon.telefon, null, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Güncelle" />
}
