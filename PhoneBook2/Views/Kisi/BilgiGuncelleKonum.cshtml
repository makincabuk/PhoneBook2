@model PhoneBook2.Models.IletisimModel.IletisimEkleViewModel
@{
    ViewBag.Title = "BilgiGuncelleKonum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Konum Bilgisi Güncelle</h2>

@using (Html.BeginForm("BilgiGuncelleKonum", "Kisi", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(x => x.Konum.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Konum.Etiket)
        @Html.TextBoxFor(x => x.Konum.Etiket, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Konum.konum)
        @Html.TextBoxFor(x => x.Konum.konum, null, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Güncelle" />
}
