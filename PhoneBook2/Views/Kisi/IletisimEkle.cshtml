@model PhoneBook2.Models.IletisimModel.IletisimEkleViewModel
@{
    ViewBag.Title = "IletisimEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>IletisimEkle</h2>
<br />
@Model.Kisi.Ad @Model.Kisi.Soyad İletişim Bilgileri
<hr />
<table class="table">
    <tr>
        <th>Telefon Numarası Etiket</th>
        <th>Telefon Numarası</th>
    </tr>
    @foreach (var Telefon in Model.TelefonL)
    {
        <tr>
            @if (Telefon.Uid == Model.Kisi.Id)
            {
                <td>
                    @Telefon.Etiket
                </td>
                <td>
                    @Telefon.telefon
                </td>
            }
        </tr>
    }
    <tr>
        <form class="form-horizontal" action="/Kisi/TelefonEkle" method="post">
            <div class="form-group">
                <td>
                    @Html.TextBoxFor(x => x.Telefon.Etiket, null, new { @class = "form-control" })
                </td>
            </div>
            <div class="form-group">
                <td>
                    @Html.TextBoxFor(x => x.Telefon.telefon, null, new { @class = "form-control" })
                </td>
            </div>
            @Html.HiddenFor(x => x.Kisi.Id)
            @Html.HiddenFor(x => x.Kisi.UUID)
            <td></td>
            <td> <input type="submit" class="btn btn-primary" value="Telefon Numarası Kaydet" /></td>
    </form>
        </tr>



</table>
